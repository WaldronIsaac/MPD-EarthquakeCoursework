<?xml version="1.0" encoding="utf-8"?>
<!-- ISAAC WALDRON - IWALDR200 - S1715300 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_700">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/purple_500">

        <TextView
            android:id="@+id/LblStartDate"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:textColor="@color/teal_200"/>

        <EditText
            android:id="@+id/StartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:hint="DD/MM/YYYY"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="date" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/purple_500">

        <TextView
            android:id="@+id/LblEndDate"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="End Date"
            android:textColor="@color/teal_200"/>

        <EditText
            android:id="@+id/EndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:hint="DD/MM/YYYY"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="date" />
    </LinearLayout>

    <Button
        android:id="@+id/Search"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Search" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/LblMagnitudeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:text="Highest Magnitude"
            android:textColor="@color/teal_200"
            android:visibility="invisible"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/MagnitudeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/LblDeepestView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deepest"
            android:textColor="@color/teal_200"
            android:textIsSelectable="true"
            android:textSize="22sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/DeepestView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/LblShallowestView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:text="Shallowest"
            android:textColor="@color/teal_200"
            android:visibility="invisible"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/ShallowestView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/LblNorthView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:text="Most Northern"
            android:textColor="@color/teal_200"
            android:visibility="invisible"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/NorthView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/LblEastView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:text="Most Eastern"
            android:textColor="@color/teal_200"
            android:visibility="invisible"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/EastView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/LblSouthView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:text="Most Southern"
            android:textColor="@color/teal_200"
            android:visibility="invisible"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/SouthView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/LblWestView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:text="Most Weastern"
            android:textColor="@color/teal_200"
            android:visibility="invisible"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/WestView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</LinearLayout>